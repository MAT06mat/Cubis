<Page>:
    MenuButton:
        size_hint: (None, 0.1)
        width: self.height
        background_normal: "images/buttons/menu.png"
        background_down: "images/buttons/menu.png"

<ZonePieces>:
    size_hint: (1, None)
    padding: ("10dp", "0dp", "10dp", "10dp")

<MyScrollView>:
    size_hint: (1, 1)

<GridPiece>:
    cols: 3
    spacing: "10dp"
    size_hint: 1, None
    height: self.minimum_height

<ValidationButton>:
    size_hint: (None, 0.1)
    width: self.height
    background_normal: "images/buttons/coche.png"
    background_down: "images/buttons/coche.png"
    background_disabled_normal: "images/buttons/coche_disabled.png"
    background_disabled_down: "images/buttons/coche_disabled.png"
    disabled: True

<UndoButton>:
    size_hint: (None, 0.1)
    width: self.height
    background_normal: "images/buttons/undo.png"
    background_down: "images/buttons/undo.png"
    background_disabled_normal: "images/buttons/undo_disabled.png"
    background_disabled_down: "images/buttons/undo_disabled.png"
    disabled: True

<RedoButton>:
    size_hint: (None, 0.1)
    width: self.height
    background_normal: "images/buttons/redo.png"
    background_down: "images/buttons/redo.png"
    background_disabled_normal: "images/buttons/redo_disabled.png"
    background_disabled_down: "images/buttons/redo_disabled.png"
    disabled: True

<GridImage>:
    pos_hint: {"center_x": 0.5, "top": 0.94}
    size_hint: (None, None)
    fit_mode: "contain"
    source: "images/elements/grid.png"

<Arrow>:
    size_hint: (None, 0.12)
    width: self.height

<LeftArrow>:
    pos_hint: {"left": 1}
    background_down: "images/buttons/left2.png"
    background_normal: "images/buttons/left2.png"

<RightArrow>:
    pos_hint: {"right": 1}
    background_down: "images/buttons/right2.png"
    background_normal: "images/buttons/right2.png"
