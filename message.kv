<PlayButtonStory>:
    size_hint: (0.75, None)
    height: self.width/1192*501
    pos_hint: {"center_x": 0.5, "center_y": 0.3}
    background_normal: "images/buttons/play.png"
    background_down: "images/buttons/play.png"
    on_press: app.manager.start_level(self.id_level)


<LevelName>:
    color: "#59173D"
    pos_hint: {"center_x": 0.5, "center_y": 0.8}
    font_name: "fonts/Forum-Regular.otf"

<ModeLabel>:
    color: "#59173D"
    pos_hint: {"center_x": 0.5, "center_y": 0.6}
    font_name: "fonts/Forum-Regular.otf"

<SettingButton>:
    size_hint: (None, None)
    pos_hint: {"center_x": 0.5}
    background_normal: "images/buttons/setting.png"
    background_down: "images/buttons/setting.png"
    on_press: app.manager.push("Setting", transition_screen=False)

<QuitButton>:
    size_hint: (None, None)
    background_normal: "images/buttons/quit.png"
    background_down: "images/buttons/quit.png"
    on_press: app.manager.pop()

<ResetButton>:
    size_hint: (None, None)
    background_normal: "images/buttons/reset.png"
    background_down: "images/buttons/reset.png"
    on_press: app.manager.start_level(self.id_level)
