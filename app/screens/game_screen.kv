<MenuButton>:
    source: "atlas://assets/images/buttons/menu"

<HelpButton>:
    source: "atlas://assets/images/buttons/help"

<ZonePieces>:
    padding: ("10dp", "0dp", "10dp", "10dp")

<MyScrollView>:
    always_overscroll: False
    size_hint: (1, 1)

<GridPiece>:
    cols: 3
    spacing: "10dp"
    size_hint: 1, None
    height: self.minimum_height

<UndoButton>:
    x: 0
    source: "atlas://assets/images/buttons/undo"
    disabled_source: "atlas://assets/images/buttons/undo_disabled"

<RedoButton>:
    source: "atlas://assets/images/buttons/redo"
    disabled_source: "atlas://assets/images/buttons/redo_disabled"

<GridImage>:
    size_hint: (None, None)
    fit_mode: "contain"
    source: "atlas://assets/images/elements/grid"

<LeftArrow>:
    source: "atlas://assets/images/buttons/left2"

<RightArrow>:
    source: "atlas://assets/images/buttons/right2"

<ScoreCase>:
    color: "#4B1A36"
    font_name: "assets/fonts/Lcd.ttf"
    halign: 'center'
    valign: 'middle'