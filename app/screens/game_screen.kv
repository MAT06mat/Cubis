<MenuButton>:
    source: "assets/images/buttons/menu.png"

<HelpButton>:
    source: "assets/images/buttons/help.png"

<ZonePieces>:
    padding: ("10dp", "0dp", "10dp", "10dp")

<MyScrollView>:
    always_overscroll: False
    size_hint: (1, 1)

<GridPiece>:
    cols: 3
    spacing: "10dp"
    size_hint: 1, None
    height: self.minimum_height

<UndoButton>:
    x: 0
    source: "assets/images/buttons/undo.png"
    disabled_source: "assets/images/buttons/undo_disabled.png"

<RedoButton>:
    source: "assets/images/buttons/redo.png"
    disabled_source: "assets/images/buttons/redo_disabled.png"

<GridImage>:
    size_hint: (None, None)
    fit_mode: "contain"
    source: "assets/images/elements/grid.png"

<LeftArrow>:
    source: "assets/images/buttons/left2.png"

<RightArrow>:
    source: "assets/images/buttons/right2.png"

<ScoreCase>:
    color: "#4B1A36"
    font_name: "assets/fonts/Lcd.ttf"
    halign: 'center'
    valign: 'middle'