<MainMenu@FloatLayout>:
    Image:
        source: "assets/images/backgrounds/menu.jpg"
        fit_mode: "cover"
    CustomResizeButton:
        id: setting_button
        size_hint: (None, None)
        size: ("70dp", "70dp")
        pos: ("5dp", "5dp")
        source: "assets/images/buttons/setting.png"
        on_custom_press: app.manager.push("Setting", transition_screen=False)
    HintBoxLayout:
        size_hint: (None, None)
        size: ("200dp", setting_button.height)
        pos_hint: {"bottom": 1, "right": 1}
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        CenterBoxLayout:
            Logo:
                source: "assets/images/elements/logo.png"
                pos_hint: {"center_x": 0.5}
                size_hint: (None, None)
            MenuBoxLayout:
                pos_hint: {"center_x": 0.5}
                size_hint: (None, None)
                orientation: "vertical"
                SMButton:
                    on_custom_press: app.manager.push("StoryMode", transition_screen=False)
                IMButton:
                    on_custom_press: app.manager.push("InfiniteMode", transition_screen=False)

<HintLabel>:
    size_hint: (None, None)
    color: "A04623"
    font_name: "assets/fonts/Coda-Regular.ttf"

<FirstHintLabel>:
    halign: "right"
    valign: "center"
    text_size: self.size

<SecondHintLabel>:
    size: self.texture_size