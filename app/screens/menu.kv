<MainMenu@FloatLayout>:
    Image:
        source: "assets/images/backgrounds/menu.jpg"
        fit_mode: "cover"
    CustomResizeButton:
        size_hint: (None, None)
        size: ("70dp", "70dp")
        pos: ("5dp", "5dp")
        source: "atlas://assets/images/buttons/setting"
        on_custom_press: app.manager.push("Setting", transition_screen=False)
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        CenterBoxLayout:
            Logo:
                source: "atlas://assets/images/elements/logo"
                pos_hint: {"center_x": 0.5}
                size_hint: (None, None)
            MenuBoxLayout:
                pos_hint: {"center_x": 0.5}
                size_hint: (None, None)
                orientation: "vertical"
                SMButton:
                    on_custom_press: app.manager.push("StoryMode", transition_screen=False)
                IMButton:
                    on_custom_press: app.manager.push("InfiniteMode", transition_screen=False)