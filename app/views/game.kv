<MenuButton>:
    size_hint: (None, 0.1)
    width: self.height
    background_normal: "assets/images/buttons/menu.png"
    background_down: "assets/images/buttons/menu.png"

<ZonePieces>:
    padding: ("10dp", "0dp", "10dp", "10dp")

<MyScrollView>:
    always_overscroll: False
    size_hint: (1, 1)

<GridPiece>:
    cols: 3
    spacing: "10dp"
    size_hint: 1, None
    height: self.minimum_height

<UndoButton>:
    size_hint: (None, 0.1)
    width: self.height
    x: 0
    background_normal: "assets/images/buttons/undo.png"
    background_down: "assets/images/buttons/undo.png"
    background_disabled_normal: "assets/images/buttons/undo_disabled.png"
    background_disabled_down: "assets/images/buttons/undo_disabled.png"
    disabled: True

<RedoButton>:
    size_hint: (None, 0.1)
    width: self.height
    background_normal: "assets/images/buttons/redo.png"
    background_down: "assets/images/buttons/redo.png"
    background_disabled_normal: "assets/images/buttons/redo_disabled.png"
    background_disabled_down: "assets/images/buttons/redo_disabled.png"
    disabled: True

<GridImage>:
    size_hint: (None, None)
    fit_mode: "contain"
    source: "assets/images/elements/grid.png"

<Arrow>:
    size_hint: (None, 0.1)

<LeftArrow>:
    background_down: "assets/images/buttons/left2.png"
    background_normal: "assets/images/buttons/left2.png"

<RightArrow>:
    background_down: "assets/images/buttons/right2.png"
    background_normal: "assets/images/buttons/right2.png"

<ScoreCase>:
    color: "#4B1A36"
    font_name: "assets/fonts/Lcd.ttf"
    halign: 'center'
    valign: 'middle'