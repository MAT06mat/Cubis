<InfiniteMode>:
    pos: 0, 0
    size_hint: (1, 1)
    Image:
        source: "assets/images/backgrounds/infinite_mode.jpg"
        fit_mode: "cover"
    CenterBoxLayout:
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        ScoreLayout:
            pos_hint: {"center_x": 0.5}
            size_hint: (None, None)
            Cadre:
            ScoreListLabel:
                color: "#4B1A36"
                font_name: "assets/fonts/Forum-Regular.otf"
                font_size: self.parent.width / 15
        PlayInfiniteModeButton:
            size_hint: (None, None)
            pos_hint: {"center_x": 0.5}
            background_normal: "assets/images/buttons/play.png"
            background_down: "assets/images/buttons/play.png"
            on_press: app.manager.start_level(0)