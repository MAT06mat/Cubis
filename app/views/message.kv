<PlayButtonStory>:
    size_hint: (0.75, None)
    height: self.width/1192*501
    pos_hint: {"center_x": 0.5, "center_y": 0.3}
    background_normal: "assets/images/buttons/play.png"
    background_down: "assets/images/buttons/play.png"
    on_press: app.manager.start_level(self.id_level)

<Back>:
    background_normal: "assets/images/buttons/croix.png"
    background_down: "assets/images/buttons/croix.png"
    size_hint: (None, None)
    pos_hint: {"right": 0.94, "top": 0.92}

<Title>:
    color: "#59173D"
    pos_hint: {"center_x": 0.5, "center_y": 0.8}
    font_name: "assets/fonts/Forum-Regular.otf"

<Texte>:
    color: "#59173D"
    font_name: "assets/fonts/Forum-Regular.otf"

<PlayMessage>:
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    size_hint: (None, None)

<MenuMessage>:
    pos_hint: {"center_x": 0.5, "top": 0.87}
    size_hint: (1, None)

<VictoireMessage>:
    pos_hint: {"center_x": 0.5, "top": 0.87}
    size_hint: (1, None)

<SettingButton>:
    size_hint: (None, None)
    pos_hint: {"center_x": 0.5}
    background_normal: "assets/images/buttons/setting.png"
    background_down: "assets/images/buttons/setting.png"
    on_press: app.manager.push("Setting", transition_screen=False)

<QuitButton>:
    size_hint: (None, None)
    on_press: app.manager.quit_level(victoire=self.victoire)

<ResetButton>:
    size_hint: (None, None)
    background_normal: "assets/images/buttons/reset.png"
    background_down: "assets/images/buttons/reset.png"
    on_press: app.manager.start_level(self.id_level, transition_screen=False)

<InfoMessage>:
    pos_hint: {"center_x": 0.5, "top": 0.87}
    size_hint: (1, None)
    Cadre:
    Title:
        text: root.title
    Button:
        size_hint: (None, None)
        width: root.width/2.5
        height: self.width/1222*661
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        text: "Suivant"
        font_size: self.width/10
        color: "#A04623"
        font_name: "assets/fonts/Coda-Regular.ttf"
        background_normal: "assets/images/buttons/2.png"
        background_down: "assets/images/buttons/2.png"
        on_press: root.next()