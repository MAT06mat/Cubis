<StoryMode>:
    background_color: (0, 0, 0, 0)
    do_default_tab: False

<Area>:
    padding: "30dp"
    size_hint: None, 1
    width: self.minimum_width

<Level>:
    size_hint: (None, None)
    size: ("150dp", "150dp")
    font_size: self.width / 4
    color: "#A04623"
    font_name: "assets/fonts/Coda-Regular.ttf"
    background_normal: "assets/images/buttons/level.png"
    background_down: "assets/images/buttons/level.png"

<MyBackgroundImage>:
    size_hint: (1, 1)
    Image:
        source: "assets/images/backgrounds/tutoriel.jpg"
        fit_mode: "cover"

<TabItem>:
    font_name: "assets/fonts/Coda-Regular.ttf"
    background_color: "#FFFFFF"
    border: [0, 0, 0, 0]
    color: "#FFFFFF"
    background_normal: "assets/images/buttons/tab.png"
    background_down: "assets/images/buttons/tab.png"