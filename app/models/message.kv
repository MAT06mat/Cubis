<PlayButtonStory>:
    size_hint: (0.75, None)
    height: self.width/1192*501
    pos_hint: {"center_x": 0.5, "center_y": 0.3}
    on_custom_press: app.manager.start_level(self.id_level)

<Title>:
    color: "59173D"
    pos_hint: {"center_x": 0.5, "center_y": 0.8}
    font_name: "assets/fonts/Forum-Regular.otf"

<Texte>:
    color: "59173D"
    font_name: "assets/fonts/Forum-Regular.otf"

<Message>:
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    size_hint: (None, None)

<SettingButton>:
    size_hint: (None, None)
    pos_hint: {"center_x": 0.5}
    source: "assets/images/buttons/setting.png"
    on_custom_press: app.manager.push("Setting", transition_screen=False)

<QuitButton>:
    size_hint: (None, None)
    on_custom_press: app.manager.quit_level()

<ResetButton>:
    size_hint: (None, None)
    pos_hint: {"center_x": 0.25}
    source: "assets/images/buttons/reset.png"
    on_custom_press: app.manager.start_level(self.id_level, transition_screen=False)

<NextButton>:
    size_hint: (None, None)
    width: self.parent.width/3.5 if self.parent else 20
    height: self.width/1222*661
    pos_hint: {"center_x": 0.5, "center_y": 0.2}
    font_size: self.width/10
    color: "A04623"
    font_name: "assets/fonts/Coda-Regular.ttf"
    source: "assets/images/buttons/2.png"

<ChoiceButton>:
    size_hint: (None, None)
    width: self.parent.width/3.5 if self.parent else 20
    height: self.width/1222*661
    font_size: self.width/7
    color: "A04623"
    font_name: "assets/fonts/Coda-Regular.ttf"
    source: "assets/images/buttons/2.png"