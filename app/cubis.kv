#:import screens.start_screen screens.start_screen
#:import screens.menu screens.menu
#:import screens.story_mode screens.story_mode
#:import screens.infinite_mode screens.infinite_mode
#:import screens.settings_screen screens.settings_screen
#:import screens.credits screens.credits
#:import uix.boxlayout_with_action_bar uix.boxlayout_with_action_bar


<MyScreenManager>:
    Screen:
        name: "StartScreen"
        StartScreen:
    Screen:
        name: "MainMenu"
        MainMenu:
    Screen:
        name: "StoryMode"
        BoxLayoutWithActionBar:
            title: "Story Mode"
            title_key: "32"
            StoryModeFloat:
    Screen:
        name: "InfiniteMode"
        BoxLayoutWithActionBar:
            title: "Infinite Mode"
            title_key: "33"
            InfiniteMode:
    Screen:
        name: "Setting"
        FloatSettings:
    Screen:
        name: "Credits"
        on_pre_enter: self.children[0].children[0].pre_enter()
        Credits:
    TransitionScreen:
        name: "TransitionScreen"
        BlackScreen:

<BlackScreen@BoxLayout>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size