<InfiniteMode>:
    Image:
        source: "images/backgrounds/infinite_mode.jpg"
        fit_mode: "cover"
    CenterBoxLayout:
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        Score:
            pos_hint: {"center_x": 0.5}
            size_hint: (None, None)
            Cadre:
            ScoreLabel:
                color: "#4B1A36"
                font_name: "fonts/Forum-Regular.otf"
                font_size: self.parent.width / 15
        PlayButton:
            size_hint: (None, None)
            pos_hint: {"center_x": 0.5}
            background_normal: "images/buttons/play.png"
            background_down: "images/buttons/play.png"
            on_press: app.manager.start_level(0)